# Use a Node.js base image
FROM node:14

# Set the working directory
WORKDIR /app

# Copy the package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the code
COPY . .

WORKDIR /app/client

# Copy the entire client-admin folder, including public/
COPY client-admin . 

# Install dependencies
RUN npm install

# Build the React app
RUN npm run build

# Start the Node.js server
WORKDIR /app
CMD [ "npm", "run", "client-admin" ]